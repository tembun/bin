#!/bin/sh
#list file.
#second argument is line number to jump to.
#works as pipe as well.

#if manual input.
if [ -t 0 ]
	then
		in="$1"
		jmp="$2"
		mod=1
	else
		jmp="$1"
		mod=0
fi
if [ -z "$jmp" ];then
	if [ "$mod" = 0 ]
	then less -FRXfi
	else less -FRXfi "$in"
	fi
else
	rowsterm=$(tput lines)
	#use "awk" trick in order to handle
	#cases when there is no newline
	#terminator in the file.
	rowstxt=$(awk "1" "$in"|wc -l)
	res=$((jmp+rowsterm-1))
	if [ $rowstxt -le $rowsterm ]; then
		if [ "$mod" = 0 ]
			then less -FRXfNi
			else less -FRXfNi "$in"
		fi
	else
		if [ $res -gt $rowstxt ];then
			jmp=$((rowstxt-rowsterm+2))
		fi
		if [ "$mod" = 0 ]
			then less -FRXfNi "+$jmp"
			else less -FRXfNi "+$jmp" "$in"
		fi
	fi
fi
